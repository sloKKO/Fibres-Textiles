                        </div>             
                    </div>                  
        </div>
    @*</table>*@
              
              @*<hr/>*@
                @*<h3>Products</h3>*@
        
      
        <div class="container">
            <div class="page-header" id="productsList"><h3>Products</h3></div>
           
            @*<div class="row-fluid" id="rowProductsList">*@
                <div class="row" id="prod">
                    @*<div  class="col-xs-6  col-md-2 col-sm-6"></div>*@
                    @foreach (var products in Model.Products)
                    {

                        <div class="col-xs-6  col-md-3 col-sm-6 col-lg-offset-1 ">
                            <a href="@Url.Action("Details","products", new { id = products.ProductId })">
                                <img src="@Url.Content(products.Picture)" class="img-responsive" />
                            </a>
                            <div class="text-center" id="productName">
                                @Html.DisplayName(products.Name)
                            </div>
                        </div>
                    }
                </div>

                @*</div>*@
            </div>
        @*</div>*@
