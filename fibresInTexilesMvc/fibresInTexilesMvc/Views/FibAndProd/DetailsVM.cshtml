    @*<div >*@ 
        
        @*<table>*@ 
        <div class="container" id="details-VM">
                <div class="row-DetailsVM">
                                     
                        <div class="col-xs-12 col-md-4 col-sm-6" id="imgCont1">
                            <div class="imageCont1">
                                <img src="@Url.Content(Model.fibre.Picture1)" class="img-responsive" width="390" height="390"/>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-4 col-sm-6 fibContMiddleColumn"  @*id="fibCont"*@>
                            <div class="fibCont" >
                                <p2>@*<h2>*@<p1>@Html.DisplayFor(model => Model.fibre.Name)</p1>@*<span> ...</span></h2><span>...</span>*@<p4> @Html.DisplayFor(model => Model.fibre.Description)</p4></p2>
